{
	"name": "phpmd",
	"description": "VS Code extension for php, using phpmd.",
	"version": "0.1.0",
	"publisher": "linyang95",
	"engines": {
		"vscode": "^0.10.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": ["onLanguage:php"],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"title": "PHPMD Configuration options",
			"type": "object",
			"properties": {
				"phpmd.enabled": {
					"type": "boolean",
					"default": true,
					"description": ""
				},
				"phpmd.validate.executablePath": {
					"type": "string",
					"default": null,
					"description": "Points to the phpmd exectuable."
				},
				"phpmd.validate.run": {
					"type": "string",
					"enum": ["onSave", "onType"],
					"default": "onSave",
					"description": "Whether the linter is run on save or on type."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"devDependencies": {
		"typescript": "^1.6.2",
		"vscode": "0.10.x"
	}
}